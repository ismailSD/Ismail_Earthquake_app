<!--  Ismail adam semester B earthquake data reader app  -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="vertical">
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="wrap_content">
        <TextView
            android:text="Updating information every"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="15"
            android:id="@+id/count_down_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/purple_700"
            android:textSize="16sp"/>
        <TextView
            android:textColor="@color/white"
            android:text="seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/map_frame"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:padding="10dp"
        >
        <TextView android:text="@string/STRENGTH"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <TextView android:text="@string/LOCATION"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="end"
            />
    </GridLayout>
    <ListView
        android:id="@+id/xmlListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>