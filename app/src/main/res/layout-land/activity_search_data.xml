<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="@string/search_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@android:color/holo_blue_dark"
            android:padding="10dp"/>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="6"
            android:useDefaultMargins="true">

            <LinearLayout
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:orientation="horizontal">

                <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="12"
                    android:useDefaultMargins="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:text="Date From:"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/teal_700"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:text="Date To:"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/teal_700"/>

                    <!--row 1-->
                    <EditText
                        android:id="@+id/date_from"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:hint="Date from"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/date_to"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:hint="Date to"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:text="Search" />


                </GridLayout>
            </LinearLayout>
        </GridLayout>

        <!--landscape style-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="10dp"
                android:rowCount="9"
                android:useDefaultMargins="true">
                <!--row 0-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:text="Furthest North:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"/>

                <TextView
                    android:id="@+id/furthest_north"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <!--row 1-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:text="Furthest South:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"/>

                <TextView
                    android:id="@+id/furthest_south"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <!--row 2-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:text="Furthest West:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"/>

                <TextView
                    android:id="@+id/furthest_west"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <!--row 3-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:text="Furthest East:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"/>

                <TextView
                    android:id="@+id/furthest_east"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </GridLayout>

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="10dp"
                android:rowCount="9"
                android:useDefaultMargins="true">
                <!--row 0-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:text="Max magnitude:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"/>

                <TextView
                    android:id="@+id/max_magnitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <!--row 1-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:text="Min Magnitude:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"/>

                <TextView
                    android:id="@+id/min_magnitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <!--row 2-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:text="Max depth:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"/>

                <TextView
                    android:id="@+id/max_depth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <!--row 3-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:text="Min Depth:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"/>

                <TextView
                    android:id="@+id/min_depth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </GridLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>